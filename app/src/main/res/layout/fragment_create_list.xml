<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.createListFragment">

    <Button
        android:id="@+id/createList"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/button"
        android:text="@string/buttonAddList"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/createListNameField"
        android:layout_width="265dp"
        android:layout_height="65dp"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="@string/createListInputName"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/createListDescriptionField"
        android:layout_width="265dp"
        android:layout_height="65dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="@string/createListInputDescription"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createListNameField"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/createListNameLabel"
        android:layout_width="109dp"
        android:layout_height="26dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="20dp"
        android:text="@string/addListNameField"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/createListNameField"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/createListDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/addListDescriptionField"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/createListDescriptionField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/addFriendIcon"
        android:layout_width="49dp"
        android:layout_height="51dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="164dp"
        android:background="#ffff"
        android:contentDescription="@string/add"
        android:scaleType="fitCenter"
        android:src="@drawable/addFriend"
        app:layout_constraintBottom_toTopOf="@+id/createList"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>